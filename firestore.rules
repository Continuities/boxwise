service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth.uid != null;
    }

    function userProfileExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function organizationMatchesUser(organization) {
      return  userProfileExists()
        && organization != null
        && organization in userProfile().organizations;
    }

    match /profiles/{userId} {
      // TODO: disallow updating fields
      allow read, create, update: if request.auth.uid == userId;
    }
    match /products/{productId} {
      allow read: if isAuthenticated() && organizationMatchesUser(resource.data.organization);
      allow create: if isAuthenticated() && organizationMatchesUser(request.resource.data.organization);
      allow update: if isAuthenticated() && organizationMatchesUser(resource.data.organization);
      allow delete: if isAuthenticated() && organizationMatchesUser(resource.data.organization);
    }
    match /boxes/{productId} {
      // TODO: correct permissions
      allow read, create, update, delete;
    }
    match /organizations/{organizationId} {
      // TODO: correct permissions
      allow read, create, update, delete;
    }
  }
}
